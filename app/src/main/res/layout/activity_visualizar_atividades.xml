<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VisualizarAtividades">

    <RelativeLayout
        android:id="@+id/idLinearLayoutVisualizaAtividades"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewNomeOng"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView6"
            android:layout_centerHorizontal="true"
            android:text="Nome da Ong"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewNomeAtividade"
            android:layout_width="292dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textViewPossuiVoluntario"
            android:layout_marginTop="90dp"
            android:text="Nome Atividade"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewDescricaoAtividade"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textViewNomeAtividade"
            android:layout_marginTop="128dp"
            android:text="Descrição Atividade"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewAreaInteresse"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textViewNomeOng"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="7dp"
            android:layout_marginTop="163dp"
            android:text="Area de Interesse"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewData"
            android:layout_width="254dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textViewNomeAtividade"
            android:layout_centerVertical="true"
            android:text="Data"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewLocal"
            android:layout_width="253dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textViewNomeAtividade"
            android:layout_marginBottom="172dp"
            android:text="Local"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewPossuiVoluntario"
            android:layout_width="259dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView6"
            android:layout_marginBottom="89dp"
            android:text="PRECISA DE VOLUNTÁRIO?"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.SearchResult.Title"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="61dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewVoluntarios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="17dp"
                android:layout_weight="1"
                android:text="Voluntarios"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textViewQtdVoluntarios"
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="49dp"
                android:layout_weight="1"
                android:text="Quantid. Voluntarios"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textViewQuantos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="QUANTOS?" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="19dp"
            android:text="ONG:"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.SearchResult.Title"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="57dp"

            android:text="ATIVIDADE:"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.SearchResult.Title"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textViewNomeAtividade"
            android:layout_marginTop="208dp"
            android:text="DATA E HORA:"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.SearchResult.Title"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textViewNomeAtividade"
            android:layout_marginBottom="205dp"
            android:text="LOCAL:"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.SearchResult.Title"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buttonVoluntariado"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView7"
            android:layout_marginBottom="28dp"
            android:text="Voluntario" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>