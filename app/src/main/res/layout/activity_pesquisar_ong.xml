<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tcc.tcc.PesquisarOngActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/pesquisaONG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="65dp"
        android:text="@string/pesquisar_por"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/spinner_ong"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner_ong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="254dp"
        android:addStatesFromChildren="false"
        android:autofillHints="Opcoes"
        android:entries="@array/opcoes"
        android:prompt="@string/opcao"
        app:layout_constraintBottom_toTopOf="@+id/buscar_ogn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pesquisaONG"
        tools:targetApi="o" />

    <Button
        android:id="@+id/buscar_ogn"
        android:layout_width="137dp"
        android:layout_height="58dp"
        android:layout_gravity="center"
        android:layout_marginBottom="46dp"
        android:layout_weight="1"
        android:background="@android:drawable/alert_dark_frame"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="@string/buscar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categoria"
        tools:targetApi="lollipop" />

    <Spinner
        android:id="@+id/categoria"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="183dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="196dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/buscar_ogn"
        app:layout_constraintEnd_toEndOf="@+id/spinner_ong"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/spinner_ong"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
