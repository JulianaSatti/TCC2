<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tcc.tcc.DoacoesActivity"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/btn_doa_realizadas"
        android:layout_width="244dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginBottom="85dp"
        android:layout_marginTop="124dp"
        android:layout_weight="1"
        android:background="@android:drawable/alert_dark_frame"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="Doações Realizadas"
        app:layout_constraintBottom_toTopOf="@+id/btn_doaobj"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:targetApi="lollipop" />

    <Button
        android:id="@+id/btn_doaobj"
        android:layout_width="244dp"
        android:layout_height="76dp"
        android:layout_gravity="center"
        android:layout_marginBottom="164dp"
        android:layout_weight="1"
        android:allowUndo="true"
        android:background="@android:drawable/alert_dark_frame"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:text="Doar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_doa_realizadas"
        tools:targetApi="m" />


</android.support.constraint.ConstraintLayout>
