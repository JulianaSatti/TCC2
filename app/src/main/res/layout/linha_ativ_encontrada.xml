<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="right">

        <TextView
            android:id="@+id/lh_nome_atividade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Nome da  Atividade"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.SearchResult.Title" />

        <TextView
    android:id="@+id/lh_descricao"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Descricao"
    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

        <TextView
            android:id="@+id/lh_area_interesse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Area Interesse"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

</LinearLayout>